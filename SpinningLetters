#include <avr/pgmspace.h>
class LED {
  int pin;
  public:
  LED()
  {
    
  }
  LED(int pinnum)
  {
    pin = pinnum;
  }
  void an()
  {
    digitalWrite(pin, HIGH);
  }
  void aus()
  {
    digitalWrite(pin, LOW);
  }
  /*bool emptyfunction() //status abfrage
  {
    if (digitalRead(pin) == HIGH)
    {
      return true;
    }
    return false;
  }*/
};
