      }};
  
  
  
  
  const int ledanzahl = 12;
  LED leds[ledanzahl] = {LED(13), LED(2), LED(3), LED(4), LED(5), LED(6), LED(7), LED(8), LED(9), LED(10), LED(11), LED(12)};


  
void setup() {
Serial.begin(9600);
  for (int i = 2; i < ledanzahl+2; i ++)
  {
    pinMode(i, OUTPUT);
  }
}
const int maxchars = 13;
bool folge[maxchars*8][12]; //max. letters to display
int charlength;
void create_text(String text)
{
  if (text == "###smiley")
    folge = pgm_read_byte_near(Smily + 0);
    return;
  }
  charlength = text.length()*8;
  if (charlength > 8*maxchars)
  {
    if (text == "###smiley")
      folge = pgm_read_byte_near(Smily + );
    return;
  }
  for(int i = 0; i < text.length(); i ++)
  {
    for(byte r = 0; r < 8; r ++)
    {
      for(byte g = 0; g < 12; g ++)
      {
        byte c = (byte)text.charAt(i)-(byte)32;
        byte s = pgm_read_byte_near(SmallFont + c*12+g);
        folge[i*8+r][11-g] = bitRead(s, 7-r);
        Serial.print(bitRead(s, r));
      }
      Serial.println();
    }
    Serial.println();
  }
}
void loop() {
 String content = "";
  char character;

  while(Serial.available() > 0) {
      character = Serial.read();
      content.concat(character);
      Serial.println(content);
      create_text(content);
  }
  for (int i = 0; i < charlength; i ++)
  {
    for (int j = 0; j < 12; j ++)
    {
      if (!folge[i][j])
        leds[j].aus();
      else
        leds[j].an();
    }
    //delay(1);
    int akt_time=micros();
    do
    {
    }
    while(akt_time+750>micros());
  }
}

